{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"title": "Display",
	"slug": "text-display",
	"blockTypes": ["core/heading", "core/paragraph"],
	"styles": {
		"typography": {
			"fontSize": "clamp(2.2rem, 2.2rem + ((1vw - 0.2rem) * 1.333), 3.5rem)",
			"lineHeight": "1.2",
			"fontWeight": "bold",
			"letterSpacing": "-0.01em"	
		},
		"css": "text-shadow: 0px 1px 2px rgb(0 0 0 / 0.3), 0px 3px 2px rgb(0 0 0 / 0.3), 0px 4px 8px rgb(0 0 0 / 0.3);"
	}
}
